                    <div class="col-sm-6">
                        <h3>Formulario de contacto</h3>
                        <div class="status alert alert-success" style="display: none"></div>
                        <form id="main-contact-form" name="contact-form" method="post" action="{{ path('sendmail') }}" role="form">
